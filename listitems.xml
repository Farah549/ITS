<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_8sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img_first_pair"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="5dp"
                app:civ_border_width="2dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/usd"
                app:civ_border_color="@android:color/holo_blue_dark"

                />

               <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_first_pair"
                android:layout_toEndOf="@id/img_first_pair"
                android:layout_toStartOf="@id/img_last_pait"
                android:layout_toLeftOf="@id/img_last_pait"
                android:layout_centerVertical="true"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:gravity="center"
                   android:orientation="vertical">
                <TextView
                    android:id="@+id/text_pairs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EUR/USD"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textStyle="bold"
                    android:textSize="@dimen/_18ssp"/>
                   <LinearLayout
                       android:orientation="horizontal"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:weightSum="6"
                       >
                   <TextView
                       android:id="@+id/text_value_low"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Target"
                       android:layout_weight="3"
                       android:textColor="@android:color/holo_red_dark"
                       android:textStyle="bold"
                       android:layout_gravity="start"
                       android:textSize="@dimen/_18ssp"/>
                       <TextView
                           android:id="@+id/text_value_high"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="3"
                           android:text="Target"
                           android:gravity="right"
                           android:layout_gravity="right"
                           android:textColor="@android:color/holo_blue_dark"
                           android:textStyle="bold"
                           android:textSize="@dimen/_18ssp"/>

                   </LinearLayout>
                       <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Monday, February 24, 2020"/>
                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="12:45 PM"/>
            </LinearLayout>
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img_last_pait"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="5dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@android:color/holo_blue_dark"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/usd"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>